<div id="add_team_modal" class="modal">
    <div class="modal-content">
      <div class="row">
        <%= form_tag(controller: "teams", action: "create", method: "create", class: "col s12") do %>
          <div class="row">
            <div class="col s12">
              <h4>Add a new Team</h4>
            </div>
            <div class="input-field col s12">
              <%= text_field(:team, :slug) %>
              <%= label_tag(:slug, "Team Name") %>
              <%= submit_tag("New Team", class: "btn right") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>